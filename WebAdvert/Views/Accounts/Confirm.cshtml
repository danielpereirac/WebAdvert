@model WebAdvert.Models.Accounts.ConfirmModel;
<div class="row">
    <div class="cold-md-4">
        <form method="post" asp-controller="Accounts" asp-action="Confirm">
            <h4>Confirm your code</h4>
            <div asp-validation-summary="All" class="text-dager">

            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-secondary">Confirm Signup</button>
        </form>
    </div>

</div>